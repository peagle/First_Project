{{> header }}

<div class="container">
    <div class="jumbotron text-center">
        <h1><span class="fa fa-lock"></span> Authentication </h1>

        <p>Login - Signup - Logout</p>

        {{#if isAuthenticated}}
            <a href="/logout" class="btn btn-default"><span class="fa fa-sign-out"></span> Logout</a>
            <a href="/users/profile" class="btn btn-default"><span class="fa fa-user"></span> Profile</a>
        {{else}}
            <a href="/login" class="btn btn-default"><span class="fa fa-sign-in"></span> Login</a>
            <a href="/signup" class="btn btn-default"><span class="fa fa-user-plus"></span> Signup</a>
        {{/if}}

    </div>
</div>

{{> footer-end }}